generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ------------------------------------------------------
// 1. O USUÁRIO
// ------------------------------------------------------
model User {
  id               String   @id // ID do Clerk
  email            String   @unique
  name             String?
  
  // -- Identidade --
  companyName      String?
  logoUrl          String?
  themeColor       String   @default("#2563EB")
  
  // -- Contato --
  phone            String?
  address          String?
  cpfCnpj          String?

  // -- Financeiro --
  pixKey           String?
  pixHolder        String?
  bankDetails      String?
  signature        String?  @default("Agradecemos a preferência!")
  
  // -- SaaS --
  plan             Plan     @default(FREE)
  stripeCustomerId String?
  credits          Int      @default(10)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  proposals        Proposal[]
  clients          Client[]
}

// ------------------------------------------------------
// 2. O CLIENTE
// ------------------------------------------------------
model Client {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String?
  address   String?
  notes     String?

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  proposals Proposal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ------------------------------------------------------
// 3. O ORÇAMENTO
// ------------------------------------------------------
model Proposal {
  id            String         @id @default(cuid())
  // MOVIDO PARA CÁ (Onde deve estar):
  numero        Int            @default(autoincrement()) 
  publicId      String         @unique @default(cuid())
  
  title         String
  description   String?        @db.Text
  totalAmount   Decimal        @db.Decimal(10, 2)
  validity      Int            @default(15)

  audioUrl      String?
  transcription String?        @db.Text
  
  // STATUS CORRIGIDO: Padrão PENDENTE
  status        ProposalStatus @default(PENDENTE)
  viewCount     Int            @default(0)

  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  clientId      String?
  client        Client?        @relation(fields: [clientId], references: [id])

  items         ProposalItem[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([userId])
}

// ------------------------------------------------------
// 4. ITENS
// ------------------------------------------------------
model ProposalItem {
  id          String   @id @default(cuid())
  // Removidos 'numero' e 'publicId' daqui pois pertencem à Proposal
  
  description String
  quantity    Int      @default(1)
  unitPrice   Decimal  @db.Decimal(10, 2)
  totalPrice  Decimal  @db.Decimal(10, 2)
  
  type        ItemType @default(SERVICE)

  proposalId  String
  proposal    Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
}

// ------------------------------------------------------
// ENUMS
// ------------------------------------------------------
enum Plan {
  FREE
  PRO
  ENTERPRISE
}

// Enum Simplificado e Alinhado com o Código
enum ProposalStatus {
  PENDENTE
  APROVADO
  PAGO
  REJEITADO
}

enum ItemType {
  SERVICE
  MATERIAL
  OTHER
}