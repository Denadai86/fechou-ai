generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ======================================================
// 1. O USUÁRIO (VOCÊ / PRESTADOR)
// ======================================================
model User {
  id               String   @id // ID do Clerk (Autenticação)
  email            String   @unique
  name             String?
  
  // --- Identidade Visual (Sua Marca) ---
  companyName      String?
  logoUrl          String?
  themeColor       String   @default("#2563EB")
  
  // --- Seus Dados de Contato ---
  phone            String?
  address          String?
  cpfCnpj          String?

  // --- Seus Dados Financeiros (Para receber do cliente) ---
  pixKey           String?
  pixHolder        String?
  bankDetails      String?
  signature        String?  @default("Agradecemos a preferência!")
  
  // --- ASSINATURA SAAS (Você pagando o Fechou-AI) ---
  plan             Plan     @default(FREE)
  
  // Integração Mercado Pago (NOVO)
  subscriptionId   String?  @unique // ID da assinatura (preapproval_id)
  subscriptionStatus String?        // status: authorized, pending, cancelled
  currentPeriodEnd DateTime?        // Data que vence o plano PRO

  // Controle de Limites (NOVO)
  // Se estiver preenchido (ex: 10), usa esse número. Se null, usa regra padrão (3).
  customMonthlyLimit Int? 

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  proposals        Proposal[]
  clients          Client[]
}

// ======================================================
// 2. O CLIENTE (SEU CRM)
// ======================================================
model Client {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String?
  address   String?
  notes     String?

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  proposals Proposal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ======================================================
// 3. O ORÇAMENTO (A PROPOSTA)
// ======================================================
model Proposal {
  id            String         @id @default(cuid())
  
  // Identificadores Públicos
  numero        Int            @default(autoincrement()) // Sequencial (1, 2, 3...)
  publicId      String         @unique @default(cuid())  // ID técnico seguro
  slug          String?        @unique                   // Link bonito (joao-reforma-102)
  
  // Dados do Serviço
  title         String
  description   String?        @db.Text
  totalAmount   Decimal        @db.Decimal(10, 2)
  validity      Int            @default(15)

  // Auditoria da IA (Opcional)
  audioUrl      String?
  transcription String?        @db.Text
  
  // Controle de Status
  status        ProposalStatus @default(PENDENTE)
  viewCount     Int            @default(0)

  // Relacionamentos
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  clientId      String?
  client        Client?        @relation(fields: [clientId], references: [id])

  items         ProposalItem[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([userId])
}

// ======================================================
// 4. ITENS DO ORÇAMENTO
// ======================================================
model ProposalItem {
  id          String   @id @default(cuid())
  
  description String
  quantity    Int      @default(1)
  unitPrice   Decimal  @db.Decimal(10, 2)
  totalPrice  Decimal  @db.Decimal(10, 2)
  
  type        ItemType @default(SERVICE)

  proposalId  String
  proposal    Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
}

// ======================================================
// ENUMS (OPÇÕES FIXAS)
// ======================================================

enum Plan {
  FREE
  PRO
}

enum ProposalStatus {
  PENDENTE  // Amarelo: Criado
  APROVADO  // Azul: Cliente aceitou no Zap
  PAGO      // Verde: Dinheiro na conta
  REJEITADO // Vermelho: Cliente não quis
}

enum ItemType {
  SERVICE
  MATERIAL
  OTHER
}